}Scanner sc = new Scanner(System.in);
        Pattern  p = Pattern.compile("hackerrank");
        int count=0;
        while(sc.hasNext())
        {
            Matcher m = p.matcher(sc.next().trim());
            if(m.find()) count++;
        }
        System.out.println("Number of matches : "+count);
        sc.close();
